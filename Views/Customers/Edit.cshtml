@model OnlineShopeProject.Models.Customer

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (Session["Customer"] != null)
        {
            <div class="form-horizontal" style=" padding:100px 100px 100px 100px; width:100%">
                <h1 style="text-align: center; color: black;  font-family: 'Segoe MDL2 Assets'">Edit Personal Information <i class="fas fa-user-edit"></i></h1>
                <hr />


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CUSTOMER_ID)

                <div class="form-group">
                    <h3>
                        <b> Name* </b>
                    </h3>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CUSTOMER_NAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CUSTOMER_NAME, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3>
                        <b> Email* </b>
                    </h3>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CUSTOMER_EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CUSTOMER_EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3>
                        <b> Current Address* </b>
                    </h3>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CUSTOMER_ADDRESS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CUSTOMER_ADDRESS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3>
                        <b> Phone Number* </b>
                    </h3>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CUSTOMER_CONTACT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CUSTOMER_CONTACT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h3>
                        <b> Password* </b>
                    </h3>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CUSTOMER_PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CUSTOMER_PASSWORD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-dark" />
                    </div>
                </div>
            </div> 
        }
        else
        {
            Response.Redirect("/Customers/Login");
        }
    }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <br />
        <br />
    </body>
</html>
