@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

@using OnlineShopeProject.Models
@{ Model4 db = new Model4();}

<!-- Start All Title Box -->
<!-- End All Title Box -->
<!-- Start Contact Us  -->
<div class="contact-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                <div class="contact-info-left">
                    <h2>CONTACT INFO</h2>
                    <p>
                        We are providing our customers with all kinds of women's accessories, Disposable items, kids' clothes and Stationary
                        , bags, and kitchen accessories.

                        So what is the reason for being so late? We gladly welcome you to avail of our services..
                        We value our customer’s needs and offer free quotes. If you need any of our services, feel free to contact us at the given address. We’ll be glad to serve you!


                    </p>
                    <ul>
                        <li>
                            <p><i class="fas fa-map-marker-alt"></i>Address:  <br> @db.Companies.Select(x => x.COMPANY_ADDRESS).FirstOrDefault() </p>
                        </li>
                        <li>
                            <p><i class="fas fa-phone-square"></i>Phone: <a href="tel:+1-888705770">@db.Companies.Select(x => x.COMPANY_CONTACT).FirstOrDefault()</a></p>
                        </li>
                        <li>
                            <p><i class="fas fa-envelope"></i>Email: <a href="mailto:contactinfo@gmail.com">@db.Companies.Select(x => x.COMPANY_EMAIL).FirstOrDefault()</a></p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-sm-12">
                <div class="contact-form-right">
                    <h2>GET IN TOUCH</h2>
                    <p>Send Your Valuable Feedback here! Or send us any querey regardig your order. We will fix your issue.<br /> Thank You!</p>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="name" name="FEEDBACK_CONTACT" placeholder="Your Name" required data-error="Please enter your name">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" placeholder="Your Email" id="email" class="form-control" name="FEEDBACK_EMAIL" required data-error="Please enter your email">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="subject" name="FEEDBACK_ADDRESS" placeholder="Subject" required data-error="Please enter your address">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea class="form-control" id="message" name="FEEDBACK_DETAIL" placeholder="Your Message" rows="4" data-error="Write your message" required></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="submit-button text-center">
                                    <button class="btn " style="background-color:black" id="submit" type="submit">Send Message</button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Cart -->
