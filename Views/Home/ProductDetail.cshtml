
@model OnlineShopeProject.Models.ProductDetail



@{

    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}


<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            @foreach (var p in Model.ProA)
            {

                <div class="col-xl-5 col-lg-5 col-md-6">
                    <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active"> <img class="d-block w-100" src="@Url.Content(p.PRODUCT_PICTURE)" alt="First slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="@Url.Content(p.PRODUCT_PICTURE2)" alt="Second slide"> </div>
                            <div class="carousel-item"> <img class="d-block w-100" src="@Url.Content(p.PRODUCT_PICTURE3)" alt="Third slide"> </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                            <span class="sr-only">Next</span>
                        </a>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="@Url.Content(p.PRODUCT_PICTURE)" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="@Url.Content(p.PRODUCT_PICTURE2)" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="@Url.Content(p.PRODUCT_PICTURE3)" alt="" />
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6">
                    <div class="single-product-details">
                        <h1 style="font-family: 'Segoe MDL2 Assets'"><b>@p.PRODUCT_NAME</b></h1>
                        <del>100%</del> -38%
                        <h5 style="font-family: 'Segoe MDL2 Assets'">Rs. @p.PRODUCT_SALEPRICE </h5>
                        <p class="available-stock" style="font-family: 'Segoe MDL2 Assets'"><span><b>Available:  </b><b style="color:red;">  In Stock</b></span>
                        <p>
                            <h4 style="font-family: 'Segoe MDL2 Assets'">Short Description:</h4>
                        <p style="font-family: 'Segoe MDL2 Assets'">
                            @p.PRODUCT_DESCRIPTION
                        </p>


                        <div class="price-box-bar">
                            <div class="cart-and-bay-btn">
                                <a class="btn  btn btn-dark" data-fancybox-close="" href="@Url.Action("Shop", "Home")">Buy New</a>
                                <a class="btn  btn btn-dark" data-fancybox-close="" href="@Url.Action("AddToCart", "Home", new { id = p.PRODUCT_ID })">Add to cart</a>
                            </div>
                        </div>

                        <div class="add-to-btn">

                            <div class="share-bar">
                                <a class="btn btn-dark" style="background-color:black" href="https://www.facebook.com/profile.php?id=100086607515224"><i class="fab fa-facebook" ></i></a>
                                <a class="btn btn-dark" style="background-color:black" href="https://www.instagram.com/onlineshoppingmart119/"><i class="fab fa-instagram" ></i></a>
                               
                                <a class="btn btn-dark " style="background-color:black" href="https://vt.tiktok.com/ZGJfBnC3o/"><i class="fa fa-music" ></i></a>
                                <a class="btn btn-dark" style="background-color:black" href="https://api.whatsapp.com/qr/CDTNXASIT6CTH1?autoload=1&app_absent=0"><i class="fab fa-whatsapp" ></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }



        </div>


    </div>


</div>
